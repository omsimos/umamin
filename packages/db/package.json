{
  "name": "@umamin/db",
  "private": true,
  "version": "0.1.0",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs"
    },
    "./schema/*": {
      "types": "./src/schema/*.ts",
      "import": "./src/schema/*.ts"
    }
  },
  "scripts": {
    "dev": "tsdown --watch  & turso dev --db-file local.db",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "drizzle-orm": "^0.44.5",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.15.1",
    "typescript": "^5.9.2"
  }
}
