{
  "name": "@umamin/db",
  "private": true,
  "version": "0.1.0",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs"
    },
    "./schema/*": {
      "types": "./src/schema/*.ts",
      "import": "./src/schema/*.ts"
    }
  },
  "scripts": {
    "dev": "tsdown --watch ./src  & turso dev --db-file local.db",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "seed": "tsx --env-file=.env ./src/seed.ts",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "drizzle-orm": "^0.44.6",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^22.18.8",
    "@umamin/encryption": "workspace:*",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
