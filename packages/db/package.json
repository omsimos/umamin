{
  "name": "@umamin/db",
  "private": true,
  "version": "0.1.0",
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch  & turso dev --db-file local.db",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@libsql/client": "^0.15.12",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4"
  }
}
