{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "ui:add:www": "pnpm --filter=www ui:add",
    "db:generate": "pnpm --filter=@umamin/db generate",
    "db:migrate": "pnpm --filter=@umamin/db migrate",
    "db:studio": "pnpm --filter=@umamin/db studio",
    "aes:generate": "npx tsx ./scripts/generate-aes-key.ts",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "eslint": "^9.36.0",
    "eslint-config-turbo": "^2.5.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=22"
  }
}
